@model EditDeleteUserViewModel

<h1>Edit User</h1>


<form asp-action="Edit" method="post" class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Id" class="form-label"></label>
            <input asp-for="Id" class="form-control"/>
        </div>
        <div class="col-md-6">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="DisplayName" class="form-label"></label>
            <input asp-for="DisplayName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" type="tel" class="form-control" />
        </div>

        <label class="form-label">Roles</label>
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div class="form-check">
                <input type="checkbox" asp-for="@Model.Roles[i].Selected" class="form-check-input" />
                <label class="form-check-label">@Model.Roles[i].RoleName</label>
                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>