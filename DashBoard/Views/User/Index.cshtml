@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Roles";
}

<div asp-validation-summary="ModelOnly"></div>
<div class="container my-5">
    <h1 class="mb-4">All Users</h1>


    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>User Id</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@string.Join(",", user.Roles)</td>
                        <td>
                            <a type="submit" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a type="submit" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <h2>No Users Is Found :)</h2>
    }

</div>
