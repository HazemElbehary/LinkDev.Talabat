@model IEnumerable<RoleViewModel>

@{
	ViewBag.Title = "Roles";
}

<div asp-validation-summary="ModelOnly"></div>
<div class="container my-5">
    <h1 class="mb-4">All Roles</h1>
    
    <!-- Form to add a new role -->
    <form method="post" class="form-inline mb-4">
        <div class="form-group me-2">
            <label for="roleName" class="sr-only">Role Name</label>
            <input type="text" class="form-control" id="roleName" name="Name" placeholder="Enter role name">
        </div>
        <button asp-action="Create" type="submit" class="btn btn-success mt-2">Add Role</button>
    </form>
    
    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>RoleId</th>
                    <th>RoleName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a type="submit" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">Edit</a>
                            <a type="submit" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <h2>No Roles Is Found :)</h2>
    }
    
</div>
