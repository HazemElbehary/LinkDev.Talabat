@model RoleViewModel

<!-- Delete role -->
<h1>Are You Sure You Want To Delete This Role ??</h1>
<form method="post" class="form-inline mb-4">
    <div class="form-group me-2 mb-2">
        <label asp-for="Id" class="sr-only">Role Id</label>
        <input class="form-control" asp-for="Id" disabled>
    </div>
    <div class="form-group me-2">
        <label asp-for="Name" class="sr-only">Role Name</label>
        <input class="form-control" asp-for="Name" disabled>
    </div>
    <button asp-action="PostDelete" asp-route-id="@Model.Id" type="submit" class="btn btn-danger mt-3">Delete</button>
</form>